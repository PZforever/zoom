/* pages/shelter/shelterList/shelterList.wxss */
page{
  background-color: #F7F6F6;
  font-size: 26rpx;
}
.title-outer{
  width: 100%;
  height: 280rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  background-color: #F7F6F6;
  z-index: 1000;
}
scroll-view{
  margin-top: 300rpx;
}
.shelter-selected{
  width: 100%;
  height: 160rpx;
  background: #fff;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  padding-top: 20rpx;
}
.tip{
  width: 100%;
  height: 60rpx;
  color: #999;
}
.tip image{
  width: 2.6%;
  height: 28rpx;
  margin-left: 2.7%;
  margin-right: 2.7%;
}
.tip text{
  width: 90%;
  text-align: center;
  line-height: 60rpx;
}
.shelter-name{
  width: 100%;
  height: 60rpx;
  color: #333;
}
.shelter-name image{
  float: right;
  width: 3%;
  height: 28rpx;
  margin-right: 6%;
  margin-top: 20rpx;
}
.shelter-name text{
  width: 83%;
  margin-left: 8%;
  text-align: center;
  line-height: 60rpx;
}
.list-title{
  width: 100%;
  height: 100rpx;
  background: #fff;
  font-size: 28rpx;
  margin-bottom: 10rpx; 
}
.where{
  float: left;
  width: 23%;
  height: 80rpx;
  margin-top: 10rpx;
  text-align: center;
  line-height: 80rpx;
  box-sizing: border-box;
}
.search{
  float: left;
  width: 72%;
  height: 80rpx;
  border: 1rpx solid #e4e4e4;
  border-radius: 6rpx;
  background: #fafafa;
  margin-top: 10rpx;
  line-height: 80rpx;

}
.search input{
  float: left;
  width:79%;
  height: 80rpx;
  text-indent: 10rpx;
  padding-left: 10rpx;
}
.search view{
  float: right;
  width:18%;
  height: 28rpx;
  line-height: 28rpx;
  color: #666;
  border-left: 1rpx solid #666;
  text-align: center;
  margin-top: 26rpx;
}
.shelter-img{
  width: 139rpx;
  height: 139rpx;
  margin-right: 24rpx;
  margin-bottom: 14rpx; 
  float: left;
}
.item{
  display:block;
  background-color: #fff;
  border-top: 1rpx solid #f4f4f4;
  border-bottom: 1rpx solid #f4f4f4;
  margin-bottom: 9rpx;
  padding: 14rpx 47rpx 0rpx 22rpx;
}
.radio-group{
  width: 100%;
  margin-top: 20rpx;
}
.center{
  float: left;
  width:auto;
  max-width:580rpx;
}
.center text{
  line-height: 48rpx;
  display:inline-block;
  max-width:440rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.shelter-title{
  color: #333;
}
.center .shortest{
  width: 114rpx;
  box-sizing:border-box;
  height: 32rpx;
  line-height: 30rpx;
  text-align: center;
  border: 1rpx solid #fa822b;
  border-radius: 6rpx;
  font-size: 20rpx;
  color: #fa822b;
  margin-left: 9rpx;
}
.location,.phone{
  line-height: 48rpx; 
  color: #999;
}
.location image{
  width: 16rpx;
  height: 24rpx;
  margin-right: 24rpx;
  vertical-align:top;
  margin-top:12rpx;

}
.phone image{
  width: 19rpx;
  height: 17rpx;
  margin-right: 24rpx;
  vertical-align:top;
  margin-top:16rpx;
}
radio{
  margin-top: 50rpx;
}
.hint{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}


