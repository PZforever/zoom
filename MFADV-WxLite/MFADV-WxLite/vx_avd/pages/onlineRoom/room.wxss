.name{
  margin-left: 18rpx;
  display: inline-block;
   width:80%; 
  /* height: 50rpx;  */
  line-height: 50rpx;
  white-space: pre-wrap;
}
.voice,.camera{
  display: inline-block;
  /* margin-top: 12rpx */
}
.voice{
  /* float: right; */
  margin-right: 20rpx;
  width: 34rpx;
  height: 32rpx;
}
.camera{
  /* float: right; */
  margin-right: 20rpx;
  width: 30rpx; 
  height: 30rpx;
}
.waitImg{
  width: 100rpx;
  height: 102rpx;
  margin: 0 auto;
  margin-top: 160rpx;
}
.loading{
  color: #ff9d2c;
  margin: 0 auto;
  text-align: center;
  font-size: 22rpx
}


.msgBox{
  width: 100%;
  /* height: 302rpx; */
  height: 10vh;
  background-color: #ececec;
}
.scrollMsg{
  
  width: 98%;
  height: 100%;
  margin: 0 1%
}
.msgItem{
   margin:8rpx  0; 
  text-align: left;
  vertical-align: middle
}
.applyerTime{
  color: #ff9d2c;
}
.beapplyerTime{
  color: #6aadff;
}
.consoultantTime{
  color: #ff4e00
}
.time{
  /* height: 26rpx; */
  line-height: 30rpx;
  font-size: 28rpx;
  margin-left: 2%;
  white-space: pre-wrap;
  word-break:break-all;
}
.applyerTime,.beapplyerTime,.consoultantTime{
  margin-right: 8rpx;
}
.msgContent{
  /* display: inline; */
  /* margin-top: 6rpx; */
  margin-left: 2%;
  /* margin-right: 2%; */
  padding: 0 8rpx;
  line-height: 46rpx;
  /* background: #fff; */
  border-radius: 4rpx;
  font-size: 28rpx;
  /* max-width: 96%; */
  min-height: 46rpx;
  color: #000;
  word-break:break-all;
  white-space: pre-wrap;
}
.inputBox{
  width: 100%;
  height: 10vh;
  line-height: 124rpx;
  background-color: #fff;
  position: relative;
  display: flex;
  align-items: center;
  justify-content:center;
}
.translateVoice{
  display: inline-block;
  position:absolute;
  left:12rpx; 
  top:22rpx;
  text-align: center;
  vertical-align: middle;
  width: 78rpx;
  height: 78rpx;
  border-radius: 38rpx;
  /* margin: 24rpx 18rpx; */
}
.recode{
  width: 24rpx;
  height: 38rpx;
  margin: 20rpx;
}
.inputForm{
  /* display: inline-block; */
  /* position:absolute;
   left:5%; 
  top:22rpx; */
  width: 90%;
  height: 78rpx;
  line-height: 78rpx;
  background-color: #f5f5f5;
  padding-left: 28rpx;
  border-radius: 300rpx;
  font-size: 28rpx
}
.input{
  /* display: inline-block; */
  height: 26rpx;
  width: 430rpx;
  margin-top: 16rpx;
  float: left
}
.sendBtn{
  float: right;
  width: 194rpx;
  height: 66rpx;
  line-height: 66rpx;
  border-radius: 300rpx;
  margin-top: 6rpx;
  background-color: #ffae43;
  color: #fff;
  margin-right: 6rpx;
}
.sendBtn::after{
  border: none;
}
.coverImg{
  width: 100%;
  height: 100%
}
.cover{
  background-color: #fff;
  opacity: 0.3
}
.pushBtn{
  width: 200rpx;
  height: 200rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  color:#fff;
}