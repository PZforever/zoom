/* pages/onlineRoom/room.wxss */
.container{
  width: 100vw;
  height: 100vh;
  padding: 0;
  background-color: #fff;
  position: relative
}
.rtcbox{
  width: 100%;
  /* height: 780rpx; */
  height: 80vh
}
.consultant{
  position: absolute;
  top: 0;
  left: 0;
  width:100%;
  /* height:420rpx; */
  height: 40vh;
  display: inline-block;
  vertical-align: middle
}
.player{
  position: absolute; 
  top: 40vh;
  left: 0;
  width: 100%;
  /* height: 360rpx; */
  height: 40vh;
	display: inline-block; 
  vertical-align: middle
}
.player1{
	position: absolute; 
  top: 40vh;
  left: 0;
  width: 50%;
  /* height:  360rpx; */
  height: 40vh;
	display: inline-block; 
  vertical-align: middle
}
.player2{
	position: absolute; 
  top: 40vh;
  left: 50%;
  width: 50%;
  /* height:  360rpx; */
  height: 40vh;
	display: inline-block; 
  vertical-align: middle
}

.enters{
  width: 100%;
  position: relative
}

.character {
  position: absolute;
  left: 0;
  top: 0;
  font-size: 28rpx;
  color: #333;
  width: 100%;
  min-height: 50rpx;  
  background-color: #e5e5e5;
  opacity: 0.65;
  line-height: 50rpx;
  text-align: left;
  display: flex;
  align-items: center
}
