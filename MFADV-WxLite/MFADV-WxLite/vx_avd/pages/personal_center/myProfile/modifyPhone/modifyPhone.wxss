view,image,text,scroll-view,navigator,input{
  margin: 0;
  padding: 0;
}
page{
  background-color: #F7F6F6;
}
.clearfix:after, .clearfix:before {
    content: " ";
    display: table;
}
.clearfix:after{
    height: 0;
    line-height: 0;
    visibility: hidden;
    clear: both;
}
.myModifyPhone,.myModifyBody{
  width: 100%;
  background-color: #F7F6F6;
}
.myModifyBody .myModifyItem{
  margin-top:10rpx;
  background-color:#fff;
  border-top:2rpx solid #efefef;
  border-bottom:2rpx solid #efefef;
}
.myModifyContant{
  border-bottom: 4rpx solid #fafafa;
  padding: 25rpx 40rpx;
}
.myModifyItemDepict{
  color:#333333;
  font-size: 30rpx;
  line-height:50rpx;
  float:left;
  margin-top:10rpx;
}
.myModifyBody .sendCode{
  color: #f9812b;
  border: 2rpx solid #f9812b;
  padding:4rpx 10rpx !important;
  background: #fff;
  float:left;
  font-size: 30rpx;
  line-height: 50rpx;
}
.myModifyBody .sendCodeDisable{
  border: 2rpx solid #F7F7F7;
}
.myModifyBody .sendCodeAct{
  border: 2rpx solid #f9812b;
}
.myModifyInput{
  color: #999999;
  line-height: 62rpx;
  width: 54%;
  float: left;
  font-size: 30rpx;
  text-align: left;
  margin-left:20rpx; 
  margin-top:14rpx;
}
.myModifyBtn{
  margin-top:65rpx;
  width:100%;
  text-align: center;
  margin-bottom: 40rpx;
}
.myModifyBtn button{
  width:80%;
  background-color: #f9812b;
  line-height: 80rpx;
  color:#fff;
  font-size: 32rpx;
}





