/* pages/online_counselling/counselor_list/counselor_list.wxss */
.head{
  background: #fff;
  font-size: 26rpx;
  border-top: 1px solid #f4f4f4;
  margin-bottom: 20rpx;
  position: relative;
}
.headLeft{
  width: 120rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 45rpx;
  position: relative;
}
.leftImg{
  width: 24rpx;
  height: 13rpx;
  position: absolute;
  top: 43rpx;
  left: 75rpx;
}
.headRight{
  width: 540rpx;
  height: 65rpx;
  border-radius: 3rpx;
  background: #f6f6f6;
  position: absolute;
  top: 18rpx;
  right: 36rpx;
}
.headRight input{
  height: 100%;
  width: 465rpx;
  padding-left: 15rpx;
}
.headRight image{
  height: 37rpx;
  width: 34rpx;
  position: absolute;
  top: 18rpx;
  right: 25rpx;
}


.psy {
  margin: 10rpx 0;
  padding: 0rpx 30rpx;
  height: 260rpx;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  font-size: 14px;
}

.psy-info {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.psy-info__avatar {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}

.psy-info__avatar  .head-default {
  position: absolute;
  height: 120rpx;
  width: 120rpx;
  z-index: 0;
}

.psy-info__detail {
  flex: 1;
}

.psy-info__exp {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.psy-info__avatar image {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  z-index: 1;
}
.name {
  color: #000;
  font-size: 30rpx;
}

.jobstart {
  font-size: 24rpx;
  color: #fa822b;
  background-color: #ffecde;
  border-radius: 3px;
  padding-left: 15rpx;
  padding-right: 15rpx;
  margin-left: 20rpx;
}

.job {
  color: #666;
  font-size: 26rpx;
  padding-bottom: 20rpx;
}

.psy-info__exp-detail {
  display: flex;
  align-items: center;
  line-height: 30px;
  width: 100%;
}

.title-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding-bottom: 10rpx;
}

.psy-info__exp-detail .item {
  display: inline-flex;
  align-items: center;
  color: #999;
  font-size: 24rpx;
}

.psy-info__exp-detail .item + .item {
  margin-left: 20rpx;
}

.psy-info__exp-detail .item text {
  display: inline-block;
  max-width: 50px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.psy-info__exp-detail image {
  width: 30rpx;
  margin-right: 10rpx;
}

.psy-intro {
  display: flex;
  color: #999;
}

.psy-intro text {
  display: inline-block;
}

.psy-intro text:not(.label) {
  flex: 1;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.select {
  margin-right: 0;
  color: white;
  background: #f9812b;
  font-size: 26rpx;
  width: 120rpx;
  height: 42rpx;
  line-height: 42rpx;
}
